<dataConfig>
  <dataSource type="JdbcDataSource"
              driver="com.mysql.jdbc.Driver"
              url="jdbc:mysql://localhost:3306/exampledb"
              user="example"
              password="example"/>
  <document>
    <entity name="exampledb"
            query="select * from tbl_example">
                <field name="id" column="id" />
                <field name="content" column="content" />
                <field name="title" column="title" />
                <field name="contributor" column="contributor" />
                <field name="date" column="date" />
    </entity>
  </document>
</dataConfig>

